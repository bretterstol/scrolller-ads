{
  "swagger": "2.0.0",
  "info": {
    "version": "0.0.1",
    "title": "Scrolller-ads",
    "description": "Handles porn-ads for the premium porn-site of this world, and worlds beyond",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "tags": [
    {
      "name": "ads",
      "description": "Scrolller Ads"
    }
  ],
  "paths": {
    "/test": {
      "get": {
        "summary": "test system",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ads": {
      "post": {
        "tags": [
          "ads"
        ],
        "summary": "Insert new ad",
        "parameters": [
          {
            "in": "body",
            "name": "AD",
            "description": "Ad to create",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AD"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ok"
          }
        }
      }
    },
    "/ads/all": {
      "get": {
        "tags": ["ads"],
        "summary": "Get all ads in the system",
        "responses": {
          "200": {
            "description": "All ads",
            "schema": {
              "$ref": "#/definitions/AD"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "AD": {
      "type": "object",
      "properties": {
        "siteName": {
          "type": "string"
        },
        "brandLogoUrl": {
          "type": "string"
        },
        "adUrl": {
          "type": "string"
        },
        "buttonText": {
          "type": "string"
        },
        "shortButtonText": {
          "type": "string"
        },
        "url": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mediaSources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/MediaSource"
          }
        }
      }
    },
    "MediaSource": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        }
      }
    }
  }
}